<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingTimeActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/image_timeimage" />

    <Spinner
        android:id="@+id/hour_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="145dp"
        android:entries="@array/hour_array"
        android:spinnerMode="dialog"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="145dp"
        android:layout_toRightOf="@id/hour_spinner"
        android:text="@string/hours"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/minute_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="213dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="145dp"
        android:layout_toRightOf="@+id/hour"
        android:entries="@array/minute_array"
        android:spinnerMode="dialog"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="145dp"
        android:layout_toRightOf="@id/minute_spinner"
        android:text="@string/minute"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="222dp"
        android:text="설정"
        android:fontFamily="@font/hangul_font"
        android:textSize="24sp" />


</RelativeLayout>